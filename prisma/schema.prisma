// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["app"]
}

enum Role {
  PLAYER
  CLUB_ADMIN
  STAFF

  @@schema("app")
}

enum BookingStatus {
  PENDING_PAYMENT
  CONFIRMED
  CANCELLED

  @@schema("app")
}

enum PaymentStatus {
  REQUIRES_PAYMENT
  PROCESSING
  SUCCEEDED
  FAILED

  @@schema("app")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  passwordHash String? @map("password_hash")
  role      Role     @default(PLAYER)
  clubId    String?
  language  String   @default("ES")
  createdAt DateTime @default(now())

  club      Club?    @relation(fields: [clubId], references: [id])
  bookings  Booking[]

  @@schema("app")
}

model Club {
  id        String   @id @default(uuid())
  name      String
  location  String
  isResort  Boolean  @default(false)
  timezone  String   @default("America/Santo_Domingo")
  createdAt DateTime @default(now())

  users     User[]
  courts    Court[]

  @@schema("app")
}

model Court {
  id        String   @id @default(uuid())
  name      String
  clubId    String
  type      String   @default("outdoor") // MVP simple
  price     Int      @default(0)          // en centavos
  createdAt DateTime @default(now())

  club      Club     @relation(fields: [clubId], references: [id])
  bookings  Booking[]

  @@schema("app")
}

model Booking {
  id        String        @id @default(uuid())
  userId    String
  courtId   String
  startTime DateTime
  endTime   DateTime
  status    BookingStatus @default(CONFIRMED)
  expiresAt DateTime?
  createdAt DateTime      @default(now())

  user      User   @relation(fields: [userId], references: [id])
  court     Court  @relation(fields: [courtId], references: [id])

  payment   Payment?

  @@schema("app")
}

model Payment {
  id            String        @id @default(uuid())
  bookingId     String        @unique
  amount        Int
  currency      String        @default("usd")
  status        PaymentStatus @default(REQUIRES_PAYMENT)
  stripeIntentId String?      @unique
  createdAt     DateTime      @default(now())

  booking       Booking       @relation(fields: [bookingId], references: [id])

  @@schema("app")
}
